<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@id/ll_app"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue02"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@id/tv_cycle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:textSize="16sp" />

        <ImageView
            android:id="@id/iv_image"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/jin_ting_100" />

        <FrameLayout
            android:id="@id/fl_frame"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" >
        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@id/ll_select"
        style="@style/ll_type02" >

        <Button
            android:id="@id/btn_select_app"
            style="@style/file_listner_btn_style"
            android:text="@string/select_app" />
    </LinearLayout>

    <TextView
        android:id="@id/tv_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@android:color/holo_red_light"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gray02"
        android:gravity="center_vertical"
        android:paddingLeft="5dp"
        android:paddingRight="5dp" >

        <Button
            android:id="@+id/tv_random"
            style="@style/file_listner_btn_style.h_hook"
            android:text="随机生成" />

        <Button
            android:id="@+id/tv_save"
            style="@style/file_listner_btn_style.h_hook"
            android:text="保存" />

        <Button
            android:id="@id/tv_auto"
            style="@style/file_listner_btn_style.h_hook"
            android:text="@string/auto_opera" />

        <Button
            android:id="@+id/tv_start"
            style="@style/file_listner_btn_style.h_hook"
            android:text="退出"
            android:visibility="gone" />
    </LinearLayout>

    <ListView
        android:id="@+id/lv_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </ListView>

</LinearLayout>